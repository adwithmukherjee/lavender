{
    "env": {
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        }
    },
    "plugins": [
        "json"
    ],
    "extends": "eslint:recommended",
    "rules": {
        "arrow-spacing": "error",
        "block-spacing": "error",
        "brace-style": [
            "error",
            "1tbs", {
                "allowSingleLine": true
            }
        ],
        "camelcase": "error",
        "comma-dangle": ["error", {
            "arrays": "always-multiline",
            "objects": "always-multiline",
            "imports": "always-multiline",
            "exports": "always-multiline",
            "functions": "only-multiline"
        }],
        "handle-callback-err": [
            "error",
            "error"
        ],
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1,
                "MemberExpression": 0
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "no-case-declarations": ["off"],
        "no-console": ["off"],
        "no-duplicate-imports": "error",
        "no-duplicate-case": "error",
        "no-floating-decimal": "error",
        "no-multi-spaces": "error",
        "no-sparse-arrays": "error",
        "no-unused-vars": [
            "error", {
                "vars": "all",
                "args": "after-used",
                "ignoreRestSiblings": false
            }
        ],
        "object-curly-spacing": ["error", "always"],
        "operator-linebreak": [
            "error",
            "before"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "quote-props": [
            "error",
            "as-needed"
        ],
        "radix": [
            "error",
            "always"
        ],
        "semi": [
            "error",
            "always"
        ],
        "space-before-blocks": [
            "error", {
                "functions": "always",
                "keywords": "always",
                "classes": "always"
            }
        ],
        "space-unary-ops": "error",
        "use-isnan": "error",
        "valid-typeof": "error"
    }
}
